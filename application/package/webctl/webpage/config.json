{
  "title": "VPN Access Point Management Panel",
  "header": {
    "projectName": "VPN Access Point",
    "logo": "logo.png"
  },
  "tabs": [
    {
      "title": "Overview",
      "id": "overview",
      "description": "General overview of the device",
      "subtabs": []
    },
    {
      "title": "Wi-Fi",
      "subtabs": [
        { "id": "wifiSettings", "title": "Settings", "description": "Configure your Wi-Fi settings." },
        { "id": "wifiConnectedDevices", "title": "Connected Devices" }
      ]
    },
    {
      "title": "VPN",
      "subtabs": [
        { "id": "vpnSettings", "title": "VPN Settings", "description": "Configure your VPN credentials and settings.",
          "fetchFromAPI": "/api/get-vpn-auth-credentials"}
      ]
    },
    {
      "title": "System",
      "subtabs": [
        { "id": "eventLog", "title": "Event Logs" },
        { "id": "fwUpdate", "title": "Firmware Update" }
      ]
    }
  ],
  "content": [
    {
      "subtabId": "overview",
      "items": [
        {
          "type": "categoryDiv",
          "id": "networkInfo",
          "title": "Network Information",
          "fetchFromAPI": "/api/overview",
          "items": [
            { "type": "textValue", "id": "ethStatus", "text": "Ethernet Status" },
            { "type": "textValue", "id": "connectedDeviceCount", "text": "Connected Devices" },
            { "type": "textValue", "id": "intSharing", "text": "Internet Sharing" }
          ]
        },
        {
          "type": "categoryDiv",
          "id": "vpnStatus",
          "title": "VPN Status",
          "fetchFromAPI": "/api/vpn-status",
          "items": [
            { "type": "textValue", "id": "vpnIpAddress", "text": "IP Address" },
            { "type": "textValue", "id": "vpnStatus", "text": "VPN Status" },
            { "type": "statusLed", "id": "vpnStatus", "text": "VPN Status" }
          ]
        },
        {
          "type": "categoryDiv",
          "id": "deviceStats",
          "title": "Device Statistics",
          "fetchFromAPI": "/api/device-stats",
          "items": []
        }
      ]
    },
    {
      "subtabId": "wifiSettings",
      "items": [
        {
          "type": "categoryDiv",
          "id": "wifiCredentials",
          "title": "Wi-Fi Credentials",
          "fetchFromAPI": "/api/wifi-config",
          "items": [
            { "type": "text", "id": "WifiName", "label": "SSID" },
            { "type": "password", "id": "WifiPassword", "label": "Wi-Fi Password" },
            { "type": "button", "id": "saveWifiCredentials", "label": "Save Configuration", "action": "saveWifi" }
          ]
        }
      ]
    },
    {
      "subtabId": "wifiConnectedDevices",
      "items": [
        {
          "type": "customList",
          "id": "connectedDevices",
          "label": "Connected Device Information",
          "fetchFromAPI": "/api/connected-devices",
          "fields": [
            { "type": "text", "id": "hostname", "label": "Hostname", "readonly": true},
            { "type": "text", "id": "ip", "label": "IP Address", "readonly": true},
            { "type": "checkbox", "id": "active", "label": "Active?", "readonly": true }
          ]
        }
      ]
    },
    {
      "subtabId": "vpnSettings",
      "items": [
        {
          "type": "categoryDiv",
          "id": "vpnCredentials",
          "title": "VPN Credentials",
          "items": [
            { "type": "text", "id": "vpnUsername", "label": "Username" },
            { "type": "password", "id": "vpnPassword", "label": "Password" }
          ]
        },
        {
          "type": "categoryDiv",
          "id": "vpnCountryPortSettings",
          "title": "VPN Settings",
          "items": [
            {
              "type": "select",
              "id": "vpnCountry",
              "label": "Select Country",
              "options": [
                { "value": "us", "text": "United States" },
                { "value": "uk", "text": "United Kingdom" },
                { "value": "de", "text": "Germany" },
                { "value": "fr", "text": "France" },
                { "value": "tr", "text": "Turkey" }
              ]
            },
            {
              "type": "select",
              "id": "vpnPort",
              "label": "Select Port",
              "options": [
                { "value": "udp", "text": "UDP" },
                { "value": "tcp", "text": "TCP" }
              ]
            },
            { "type": "checkbox", "id": "vpnAutoConnect", "label": "Otomatik Bağlan", "checked": false }
          ]
        },
        {
          "type": "button",
          "id": "toggleVpnButton",
          "label": "VPN Aç/Kapat",
          "action": "toggleVpn"
        },
        {
          "type": "text",
          "id": "vpnStatus",
          "label": "Durum",
          "fetchFromAPI": "/api/vpn-status",
          "readonly": true
        },
        {
          "type": "statusLed",
          "id": "vpnStatus",
          "fetchFromAPI": "/api/vpn-status"
        }
      ]
    },
    {
      "subtabId": "eventLog",
      "items": [
        {
          "type": "fileReader",
          "id": "logReader",
          "fetchFromAPI": "/api/readfile/var/log/messages"
        }
      ]
    },
    {
      "subtabId": "fwUpdate",
      "items": [
        {
          "type": "textValue",
          "id": "version",
          "text": "Current Version",
          "fetchFromAPI": "/api/version"
        },
        {
          "type": "file",
          "id": "fwUpdateFile",
          "label": "Select Firmware File (.ext4)",
          "accept": ".ext4"
        },
        {
          "type": "button",
          "id": "fwUpdateBtn",
          "label": "Upload",
          "action": "updateFw"
        }
      ]
    }
  ]
}